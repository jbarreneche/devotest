<%= form_for(Comment.new, 
    :url => project_test_comments_path(project, test), :remote => true) do |f| %>
  <div class="field">
    <%= f.label :comment, "Add a new Comment" %><br />
    <%= f.text_area :comment, :size => '80x10' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end%>