<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Git repository:</b>
  <%= @project.git_repository %>
</p>

<p>
  <b>Tests:</b>
  <ul>
    <%- @test_suite.each do |test| %>
      <%= render :partial => 'test_item', :locals => {
      :test => test, :project => @project
      } %>
    <% end %>
  </ul>
</p>

<%= link_to 'Update test suite', 
            update_test_suite_project_path(@project), :method => :put %> | 

<%= link_to 'Edit', edit_project_path(@project) %> |

<%= link_to 'Back', projects_path %>
